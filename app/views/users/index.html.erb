<% provide(:title, "Users") %>
<div class="form">
  <h1 class="text-center">List of Users</h1>
  <div class="container">
    <ul class="users">
      <% @users.each do |user| %>
        <li>
        <%= gravatar_for user, size: 52 %>
        <%= link_to user.name, user %>
        <%= link_to  'delete', user_path(user), method: :delete,
                              data: { confirm: "You sure?" } %>
        </li>
    </ul>
    <div class="m-4 container">
      <%= will_paginate %>
    </div>
  </div>
</div>