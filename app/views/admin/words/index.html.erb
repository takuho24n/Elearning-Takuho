<div class="container py-5">
    <div class="container py-5">
        <ul class="nav nav-pills nav-warning float-right justify-content-end">
            <li class="nav-item">    
                <a class="nav-link active" href="words/new">Create</a>
            </li>
        </ul>
    </div>
    <div class="row object-list">
        <% @words.each do|word|%>
            <div class="col-md-6 mb-4">
                <article class="card p-2 h-100">
                    <div class="card-body">
                        <% if current_user.administrator? %>
                            <table>
                                <tr>
                                    <td>
                                        <%= button_to edit_admin_category_word_path(@category, word), method: :get, class: "btn btn-warning btn-sm" do %>
                                            edit
                                        <% end %>
                                    </td>
                                    <td>
                                        <%= button_to admin_category_word_path(@category, word), method: :delete, class: "btn btn-dark btn-sm",
                                                            data: { confirm: "You sure?" } do %>
                                            Delete
                                        <% end %>
                                    </td>
                                </tr>
                            </table>
                        <% end %>
                    <h4 class="card-title">
                        <%= word.words %>
                    </h4>
                </div>
            </article>
        </div>
    <% end %>  
</div>
    